<link href="//cdn.bootcss.com/bootstrap/4.0.0-alpha.3/css/bootstrap.css" rel="stylesheet">
<link href="//cdn.bootcss.com/bootstrap/4.0.0-alpha.3/css/bootstrap.min.css" rel="stylesheet">
<script src="//cdn.bootcss.com/bootstrap/4.0.0-alpha.3/js/bootstrap.js"></script>
<script src="//cdn.bootcss.com/bootstrap/4.0.0-alpha.3/js/bootstrap.min.js"></script>
<div class="container">
	<div class="row clearfix">
		<div class="col-md-12 column">
			<h3>
				博客
			</h3>
			<ul class="nav nav-tabs">
				<li class="active">
					 <a href="/show">Index</a>
					 <a href="/add">Add</a>
					 <a href="/delete">Delete</a>
					 <form  action="/show" method="get">
						 search_by_id <input type="text" name="id"/>
						 search_by_author <input type="text" name="author"/>
						<input type="submit" value="Submit" />
					 </form>
				</li>
			</ul>
		</div>
	</div>
	<div class="row clearfix">
		<div class="col-md-8 column">
			<table class="table">
				<thead>
					<tr>
						<th>
							Id
						</th>
						<th>
							Message
						</th>
						<th>
							Author
						</th>
						<th>
							Time
						</th>
						<th>
							Delete
						</th>
					</tr>
				</thead>
				<tbody>
						<% $b_search.reverse.each { |b| %>
							<tr>
							<td>
								<%= b[0]%>
							</td>
							<td>
								<%= b[1]%>
							</td>
							<td>
							<%= b[2]%>
							</td>
	            <td>
							<%= b[3]%>
							</td>
	            <td>
	              <form  action="/delete" method="post">
								 <input type="submit" name="Delete" value="<%= b[0]%>" />
	    					</form>
							</td>
							  <% } %>
							</tr
				</tbody>
			</table>
		</div>
		<div class="col-md-4 column">
			<h2>
				特别提示:
			</h2>
			<p>
				<strong><%= $msg %></strong>
			</p>
		</div>
	</div>
</div>
