<div class="container">
	<div class="row clearfix">
		<div class="col-md-12 column">
			<h1 class="text-center">
				<%= @post.title %>
			</h1>

			<p>
				<%=@post.content %>
			</p>
			<p>
			</p> <span class="label label-default">Comments</span>
			<% @post.comments.each do |comment| %>
      <% if comment.passed==1 %>
			<p>
      e-mail:<%= comment.email %>
		  </p>
			<p>
				content:<%= comment.content %>
			</p>
      <% end %>
    <% end %>
		 <span class="label label-default">Add Comments</span>
			<%= form_for([@post, @post.comments.build]) do |f| %>
	      <p>
	        <%= f.label :email %><br>
	        <%= f.text_field :email %>
	      </p>
	      <p>
	        <%= f.label :content %><br>
	        <%= f.text_area :content %>
	      </p>
	      <p>
	        <%= f.submit %>
	      </p>
	    <% end %>
			<%= link_to 'back', :back  %>
		</div>
	</div>
</div>
