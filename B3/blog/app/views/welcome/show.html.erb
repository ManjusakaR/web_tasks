<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%=@post.content %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
<% if comment.passed==1 %>
  <p>
    <strong>E-mail:</strong>
    <%= comment.email %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= comment.content %>
  </p>
  <% end %>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
