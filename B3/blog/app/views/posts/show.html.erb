<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>

  <p>
    <strong>E-mail:</strong>
    <%= comment.email %>
  </p>
  <p>
    <strong>Content:</strong>
    <%= comment.content %>
  </p>
  <% if comment.passed==0 %>
  <p>
    <%= form_for :comment,url: passed_url do |f| %>
    <%= f.hidden_field :id,value: comment.id %>
    <%= f.submit%>
    <% end %>
  </p>
  <% end %>

  <p>
    <%= form_for :comment,url: destroy_comment_url do |f| %>
    <%= f.hidden_field :id,value: comment.id %>
    <%= f.submit%>
    <% end %>
  </p>

<% end %>
<%= link_to 'back', posts_url  %>
