<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
<% if comment.passed==0 %>
  <p>
    <strong>E-mail:</strong>
    <%= comment.email %>
  </p>
  <p>
    <strong>Content:</strong>
    <%= comment.content %>
  </p>
  <p>
    <%= form_for :comment,url: passed_path do |f| %>
    <%= f.hidden_field :id,value: comment.id %>
    <%= f.submit%>
    <% end %>
  </p>
  <% end %>
<% end %>
