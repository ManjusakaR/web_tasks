<h1>Listing posts</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td>
        <%= link_to 'Comments', post_url(post.id) ,method: :get%>
      </td>
    </tr>
  <% end %>
</table>
