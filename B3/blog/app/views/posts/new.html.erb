<link href="//cdn.bootcss.com/bootstrap/4.0.0-alpha.3/css/bootstrap.css" rel="stylesheet">
<script src="//cdn.bootcss.com/bootstrap/4.0.0-alpha.3/js/bootstrap.js"></script>
<div class="container">
	<div class="row clearfix">
		<div class="col-md-12 column">
			<h3 class="text-center">
				Add posts
			</h3>
      <%= form_for :post,url: posts_path do |f| %>
      <p>
        <%= f.label :type %>(1 or 2) <br>
        <%= f.text_field :p_type%>
      </p>

      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title%>
      </p>

      <p>
        <%= f.label :content %><br>
        <%= f.text_area :content%>
      </p>

      <p>
        <%= f.submit%>
      </p>

      <% end %> <%= link_to 'Back',admins_url%><br>
		</div>
	</div>
</div>
